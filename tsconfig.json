{
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.server/**/*.ts",
    "**/*.server/**/*.tsx",
    "**/*.client/**/*.ts",
    "**/*.client/**/*.tsx"
  ],
  "compilerOptions": {
    /* =====================
       üîß Target & Module
       ===================== */
    "target": "ES2022",                // modern output (async/await native)
    "module": "ESNext",                // biar Remix bisa handle bundling
    "moduleResolution": "Bundler",     // cocok untuk Vite + Remix

    /* =====================
       üìö Environment Support
       ===================== */
    "lib": ["DOM", "DOM.Iterable", "ES2022"],

    /* Remix & Node support types */
    "types": [
      "@remix-run/node",
      "@remix-run/react",
      "vite/client",
      "node"                         // ‚¨ÖÔ∏è penting! biar fs, path, process, Buffer dikenali
    ],

    /* =====================
       ‚öôÔ∏è React & JSX
       ===================== */
    "jsx": "react-jsx",

    /* =====================
       üß© Interop & Safety
       ===================== */
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "ignoreDeprecations": "6.0",

    /* =====================
       üß≠ Path Alias
       ===================== */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*"]
    }
  }
}
